CC = gcc
SRC = src
LIB = lib
main: main.c $(LIB)/libcal.a
	$(CC) main.c -L $(LIB)/ -lcal -I include/ -o main


OBJ = $(SRC)/add.c $(SRC)/sub.c

.PHONY: clean


add.o:$(SRC)/add.c
	$(CC) -c $(SRC)/add.c -I include/ -o add.o

sub.o:$(SRC)/sub.c
	$(CC) -c $(SRC)/sub.c -I include/ -o sub.o

O = add.o sub.o	

$(LIB)/libcal.a:$(O)
	ar rcs $(LIB)/libcal.a $(O)
	

clean:
	rm *.o
	rm main
